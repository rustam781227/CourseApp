<Page x:Class="CourseWork.ReceivedRequests"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWork"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReceivedRequests">

    <Grid Margin="20,20,20,20">
        <Border Background="White" CornerRadius="10,10,10,10">
            <Grid x:Name="requestsGrid" Margin="20,20,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="Sender" FontFamily="Leelawadee" FontSize="20" FontWeight="Bold" Margin="0,0,0,0" Grid.ColumnSpan="2"/>
                <Label Content="Event" Grid.Column="2" FontFamily="Leelawadee" FontSize="20" FontWeight="Bold"/>
            </Grid>
        </Border>

    </Grid>
</Page>
